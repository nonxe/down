{
  "name": "Universal Video & Audio Downloader Bot",
  "description": "Multilingual Telegram bot for video/audio download with fallback logic",
  "repository": "https://github.com/nonxe/down",
  "stack": "heroku-24",
  "env": {
    "BOT_TOKEN": {
      "description": "Telegram bot token from BotFather",
      "required": true
    },
    "WEBHOOK_URL": {
      "description": "Your Heroku app URL for webhook. Optional, can set later",
      "required": false
    },
    "LANG_MEMORY": {
      "description": "Enable persistent language memory (true/false)",
      "value": "true"
    }
  },
  "buildpacks": [
    { "url": "heroku/python" },
    { "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest" }
  ],
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "standard-2x"
    }
  },
  "scripts": {
    "postdeploy": "echo Deployment finished"
  }
}
