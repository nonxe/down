{
  "name": "Universal Video & Audio Downloader Bot",
  "description": "A multilingual Telegram bot for video/audio download with fallback logic and button-first UX.",
  "repository": "https://github.com/nonxe/down",
  "stack": "heroku-24",
  "env": {
    "BOT_TOKEN": {
      "description": "Your Telegram Bot Token from @BotFather",
      "required": true
    },
    "WEBHOOK_URL": {
      "description": "Public HTTPS URL for webhook",
      "required": true
    },
    "LANG_MEMORY": {
      "description": "Enable persistent language memory (true/false)",
      "value": "true"
    }
  },
  "buildpacks": [
    { "url": "heroku/python" },
    { "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest" }
  ],
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "standard-2x"
    }
  },
  "scripts": {
    "postdeploy": "echo âœ… Deployment done. Bot is running as worker dyno."
  }
}
